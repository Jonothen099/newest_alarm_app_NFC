<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<com.google.android.material.button.MaterialButtonToggleGroup
		android:id="@+id/nac_day_button_group"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<com.google.android.material.button.MaterialButton
			style="?attr/materialButtonOutlinedStyle"
			android:id="@+id/nac_day_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:stateListAnimator="@animator/nac_day_button_text"
			android:fontFamily="sans-serif-medium"
			android:padding="0dp"
			android:insetTop="0dp"
			android:insetBottom="0dp"
			android:maxLines="1"
			android:maxLength="1"
			android:textColor="@color/gray_light"
			android:textSize="@dimen/tsz_normal"
			android:text=""
			app:backgroundTint="@android:color/transparent"
			app:cornerRadius="@dimen/radius_day_outlined"
			app:strokeColor="@color/nac_day_button_stroke"
			/>
	</com.google.android.material.button.MaterialButtonToggleGroup>

</merge>
