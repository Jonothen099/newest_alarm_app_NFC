<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nac_swipe_copy"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/green"
	tools:ignore="Overdraw">

	<ImageView
		android:id="@+id/copy_icon"
		android:layout_width="@dimen/isz_large"
		android:layout_height="@dimen/isz_large"
		android:layout_marginStart="@dimen/normal"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:src="@mipmap/copy"
		android:contentDescription="@null"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/copy_icon"
		android:layout_marginStart="@dimen/normal"
		android:layout_centerVertical="true"
		android:textAllCaps="true"
		android:textColor="@color/white"
		android:textSize="@dimen/tsz_large"
		android:textStyle="bold"
		android:text="@string/action_alarm_copy"
		/>

</RelativeLayout>
